{
  "manifest_version": 3,
  "name": "Table Picker & Copier",
  "version": "2.0.0",
  "description": "Select rows/columns from HTML tables and copy or download as CSV/TSV.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle",
       "all_frames": true   
    }
  ]
}